<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>first</servlet-name>
        <servlet-class>FirstServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>first</servlet-name>
        <url-pattern>/firstservlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>beerselect</servlet-name>
        <servlet-class>SelectBeerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    <servlet-name>beerselect</servlet-name>
    <url-pattern>/select.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>codereturn</servlet-name>
        <servlet-class>CodeReturn</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>codereturn</servlet-name>
        <url-pattern>/codereturn.jar</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>showbrown</servlet-name>
        <servlet-class>ShowBrownBeer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>showdark</servlet-name>
        <servlet-class>ShowDarkBeer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showdark</servlet-name>
        <url-pattern>/showdark.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>showbrown</servlet-name>
        <url-pattern>/showbrown.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>initparams</servlet-name>
        <servlet-class>TestInitParams</servlet-class>
        <init-param>
            <param-name>adminEmail</param-name>
            <param-value>likewcare@qq.com</param-value>
        </init-param>
        <init-param>
            <param-name>mainEmail</param-name>
            <param-value>ethanleslie@outlook.com</param-value>
        </init-param>
    </servlet>
    <context-param>
        <param-name>context</param-name>
        <param-value>This is context</param-value>
    </context-param>
    <servlet-mapping>
        <servlet-name>initparams</servlet-name>
        <url-pattern>/params</url-pattern>
    </servlet-mapping>
</web-app>